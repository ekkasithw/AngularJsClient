<!DOCTYPE html>
<html lang="en" ng-app="tripPlanner">
<head>
  <meta charset="UTF-8">
  <title>Trip Planner</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
        integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
        crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css"
        integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r"
        crossorigin="anonymous">
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
  <!--STYLES-->
  <link rel="stylesheet" href="/styles/dependencies/colorbox.css">
  <link rel="stylesheet" href="/styles/importer.css">
  <link rel="stylesheet" href="/styles/style.css">
  <!--STYLES END-->
</head>
<body>
  <div class="container-fluid" ng-controller="defaultController">
    <div class="trip-name">
      <div>JAPAN TRIP 2016</div>
      <div class="row row-equal-height">
        <div class="col-md-5 text-right">
          <a ng-class="isActive(town.id)" href="#/town/{{town.id}}" ng-repeat="town in towns | limitTo: getHalfIndex(towns)">
            {{town.name | uppercase}}
          </a>
        </div>
        <div class="col-md-2 text-center">
          <a href="#/trip"><img class="img-responsive img-rounded" src="/images/japan.jpg"></a>
        </div>
        <div class="col-md-5 text-left">
          <a ng-class="isActive(town.id)" href="#/town/{{town.id}}" ng-repeat="town in towns | limitTo: getHalfIndex(towns): getHalfIndex(towns)">
            {{town.name | uppercase}}
          </a>
        </div>
      </div>
    </div>
    <ng-view></ng-view>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.0/angular.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.0/angular-route.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.0/angular-resource.min.js"></script>
  <script>
    (function() {
      // Fix for jquery bbq
      $.browser = {};
      $.browser.msie = false;
      $.browser.version = 0;
      if (navigator.userAgent.match(/MSIE ([0-9]+)\./)) {
        $.browser.msie = true;
        $.browser.version = RegExp.$1;
      }
    })();
  </script>
  <!--SCRIPTS-->
  <script src="/dependencies/sails.io.js"></script>
  <script src="/dependencies/angular-local-storage.min.js"></script>
  <script src="/dependencies/jquery.ba-bbq.min.js"></script>
  <script src="/dependencies/jquery.colorbox-min.js"></script>
  <script src="/app.js"></script>
  <script src="/controllers/defaultController.js"></script>
  <script src="/controllers/townController.js"></script>
  <script src="/controllers/tripController.js"></script>
  <script src="/directives/colorbox.js"></script>
  <script src="/directives/dayList.js"></script>
  <script src="/directives/draggable.js"></script>
  <script src="/directives/droppable.js"></script>
  <script src="/directives/masonry.js"></script>
  <script src="/directives/sortable.js"></script>
  <script src="/filters/sanitize.js"></script>
  <!--SCRIPTS END-->
</body>
</html>
