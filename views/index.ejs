<!DOCTYPE html>
<html lang="en" ng-app="tripPlanner">
<head>
  <meta charset="UTF-8">
  <title>Trip Planner</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
        integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
        crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css"
        integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r"
        crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/style.css">
  <!--STYLES-->
  <link rel="stylesheet" href="/styles/dependencies/colorbox.css">
  <link rel="stylesheet" href="/styles/importer.css">
  <link rel="stylesheet" href="/styles/style.css">
  <!--STYLES END-->
</head>
<body>
  <div class="container" ng-controller="defaultController">
    <div class="trip-name">
      <div>JAPAN TRIP 2016</div>
      <div class="row row-equal-height">
        <div class="col-md-5 text-right">
          <a href="#/town/{{town.id}}" ng-repeat="town in towns | limitTo: getHalfIndex(towns)">
            {{town.name | uppercase}}
          </a>
        </div>
        <div class="col-md-2 text-center">
          <a href="#/japan"><img class="img-responsive img-rounded" src="/images/japan.jpg"></a>
        </div>
        <div class="col-md-5 text-left">
          <a href="#/town/{{town.id}}" ng-repeat="town in towns | limitTo: getHalfIndex(towns): getHalfIndex(towns)">
            {{town.name | uppercase}}
          </a>
        </div>
      </div>
    </div>
    <ng-view></ng-view>
  </div>

  <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.0/angular.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.0/angular-route.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.0/angular-resource.min.js"></script>
  <script src="app.js"></script>
  <!--SCRIPTS-->
  <script src="/dependencies/sails.io.js"></script>
  <script src="/dependencies/jquery.colorbox-min.js"></script>
  <script src="/controllers/defaultController.js"></script>
  <script src="/controllers/japanController.js"></script>
  <script src="/controllers/townController.js"></script>
  <script src="/directives/colorbox.js"></script>
  <script src="/directives/draggable.js"></script>
  <!--SCRIPTS END-->
</body>
</html>
